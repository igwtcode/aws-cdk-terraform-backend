{
  "name": "@igwtcode/aws-cdk-terraform-backend",
  "description": "aws-cdk app to create S3 buckets and DynamoDB tables for storing terraform state and lock files",
  "version": "1.0.0",
  "license": "MIT",
  "type": "commonjs",
  "main": "dist/index.js",
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=16.0.0"
  },
  "author": {
    "name": "igwtcode"
  },
  "homepage": "https://github.com/igwtcode/aws-cdk-terraform-backend#readme",
  "bugs": {
    "url": "https://github.com/igwtcode/aws-cdk-terraform-backend/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/igwtcode/aws-cdk-terraform-backend"
  },
  "scripts": {
    "destroy": "wireit",
    "deploy": "wireit",
    "synth": "wireit",
    "bootstrap": "wireit",
    "build": "wireit",
    "test": "wireit",
    "lint": "wireit",
    "lint:tsc": "wireit",
    "format": "wireit",
    "clean:deep": "wireit",
    "clean": "wireit"
  },
  "devDependencies": {
    "@types/jest": "29.4.0",
    "@types/node": "18.15.0",
    "@types/prettier": "2.7.2",
    "@types/object-hash": "3.0.2",
    "@typescript-eslint/eslint-plugin": "5.59.2",
    "@typescript-eslint/parser": "5.54.1",
    "eslint": "8.35.0",
    "eslint-config-prettier": "8.7.0",
    "eslint-plugin-prettier": "4.2.1",
    "jest": "29.5.0",
    "prettier": "2.8.4",
    "rimraf": "4.4.0",
    "object-hash": "3.0.0",
    "ts-jest": "29.0.5",
    "aws-cdk": "2.68.0",
    "ts-node": "10.9.1",
    "typescript": "4.9.5",
    "tsup": "6.6.3",
    "wireit": "0.9.5"
  },
  "dependencies": {
    "aws-cdk-lib": "2.68.0",
    "constructs": "10.1.273",
    "source-map-support": "0.5.21"
  },
  "wireit": {
    "destroy": {
      "command": "cdk destroy --ci --force --all",
      "dependencies": [
        "synth"
      ]
    },
    "deploy": {
      "command": "cdk deploy --ci --force --all --require-approval never",
      "dependencies": [
        "synth"
      ]
    },
    "synth": {
      "command": "cdk synth --all > template.yml",
      "dependencies": [
        "bootstrap"
      ]
    },
    "bootstrap": {
      "command": "cdk bootstrap --ci --force",
      "dependencies": [
        "build"
      ]
    },
    "build": {
      "command": "tsup",
      "dependencies": [
        "lint",
        "test"
      ],
      "output": [
        "dist"
      ],
      "clean": true
    },
    "lint": {
      "command": "eslint --fix --color --max-warnings 0 .",
      "files": [
        "src/**/*.ts",
        ".eslintignore"
      ],
      "dependencies": [
        "lint:tsc"
      ]
    },
    "lint:tsc": {
      "command": "tsc",
      "dependencies": [
        "format"
      ]
    },
    "format": {
      "command": "prettier --write src/**/*.ts"
    },
    "test": {
      "command": "jest"
    },
    "clean:deep": {
      "command": "npm cache clean --force && rm -rf package-lock.json",
      "dependencies": [
        "clean"
      ]
    },
    "clean": {
      "command": "rimraf dist node_modules .eslintcache cdk.out template.yml"
    }
  },
  "keywords": [
    "aws",
    "cdk",
    "aws-cdk",
    "terraform",
    "tfstate",
    "backend",
    "s3",
    "bucket",
    "s3_bucket",
    "dynamodb",
    "table",
    "dynamodb_table",
    "typescript"
  ]
}
